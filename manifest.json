{
    "name"            : "That's My Line",
    "version"         : "1.0",
    "description"     : "Redirect any searches run on bing.com(ca) to google.com(ca)",
    "author"          : "Geoff Nowak",
    "manifest_version": 2,
    "background"      : {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://www.bing.com/search/*"
      ]
}